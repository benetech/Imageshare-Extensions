{
  "name": "Imageshare Search",
  "description": "An extension that searches Imageshare keywords for matches with users' current site content. Notifies user of matches and opens Imageshare, in a net window, to results view.",
  "version": "0.1.0",
  "background": {
    "scripts" : ["background.js"]
  },
  "browser_action": {
    "default_icon": "screenshot.jpg"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "permissions": [
    "contextMenus",
    "notifications",
    "nativeMessaging",
    "storage",
    "*://*/*"
  ],
  "applications": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "42.0"
    }
  },
  "content_scripts": [
    {
      "js": ["index.js"],
      "matches": ["*://*/*"]
    }
  ],
  "icons":{
    "16": "screenshot.jpg",
    "128": "screenshot.jpg"
  },

  "manifest_version": 2

}
