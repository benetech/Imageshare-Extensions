{
  "name": "Imageshare Search",
  "description": "An extension that searches Imageshare keywords for matches with users' current site content. Notifies user of matches and opens Imageshare, in a net window, to results view.",
  "version": "0.1.0",
  "background": {
    "service_worker" : "background.js"
  },
  "action": {
    "default_icon": "./icons/Imageshare-logo-no-text-white.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "contextMenus",
    "notifications",
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["index.js"]
    }
  ],
  "icons":{
    "16": "./icons/Imageshare-logo-no-text-white.png",
    "48": "./icons/Imageshare-logo-no-text-white.png",
    "128": "./icons/Imageshare-logo-no-text-white.png",
    "512": "./icons/Imageshare-logo-no-text-white.png",
    "1024": "./icons/Imageshare-logo-no-text-white.png"
    },

  "manifest_version": 3

}
