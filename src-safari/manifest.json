{
  "name": "Imageshare Search",
  "description": "An extension that searches Imageshare keywords for matches with users' current site content. Notifies user of matches and opens Imageshare, in a net window, to results view.",
  "version": "0.1.0",
  "background": {
    "scripts" : ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "./icons/Imageshare-logo-no-text.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "contextMenus",
    "notifications",
    "storage",
    "activetab",
    "tabs",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "js": ["index.js"],
      "matches": ["*://*/*"]
    }
  ],
  "icons":{
    "16": "./icons/Imageshare-logo-no-text-16x16.jpg",
    "48": "./icons/Imageshare-logo-no-text-48x48.jpg",
    "128": "./icons/Imageshare-logo-no-text-128x128.jpg",
    "1024": "./icons/Imageshare-logo-no-text-1024x1024.jpg"
    },

  "manifest_version": 2

}
